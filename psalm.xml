<?xml version="1.0"?>
<psalm
    findUnusedPsalmSuppress="true"
    findUnusedVariablesAndParams="true"
    strictBinaryOperands="true"
    errorLevel="1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <ignoreFiles>
            <directory name="vendor"/>
            <file name="src/DependencyInjection/Configuration.php"/>
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <file name="src/Model/MoneyDto.php"/>
            </errorLevel>
        </ArgumentTypeCoercion>
        
        <MixedArrayAccess>
            <errorLevel type="suppress">
                <file name="src/DependencyInjection/MoneyExtension.php"/>
            </errorLevel>
        </MixedArrayAccess>

        <MixedArgument>
            <errorLevel type="suppress">
                <file name="src/DependencyInjection/MoneyExtension.php"/>
                <file name="src/Form/Type/Extension/MoneyTypeExtension.php"/>
            </errorLevel>
        </MixedArgument>

        <MixedOperand>
            <errorLevel type="suppress">
                <file name="src/Form/Type/Extension/MoneyTypeExtension.php"/>
            </errorLevel>
        </MixedOperand>

        <PossiblyNullArgument>
            <errorLevel type="suppress">
                <!-- A false positive, the IntlNumberFormatter constructor accepts null as 3rd parameter -->
                <file name="src/Formatter/IntlNumberFormatterFactory.php"/>
                <!-- The configuration instance always exist -->
                <file name="src/DependencyInjection/MoneyExtension.php"/>
            </errorLevel>
        </PossiblyNullArgument>

        <MissingTemplateParam>
            <errorLevel type="suppress">
                <directory name="src"/>
            </errorLevel>
        </MissingTemplateParam>
    </issueHandlers>

    <plugins>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin"/>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin"/>
    </plugins>
</psalm>
